<?xml version="1.0" encoding="utf-8"?>



    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="190dp"
        android:layout_height="268dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="4dp"
        app:cardCornerRadius="8dp"
    android:elevation="6dp"
    android:background="?attr/selectableItemBackground"
        >



    <LinearLayout
        android:id="@+id/middel_offers_background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDEFC8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/middle_offers_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/product_layout_title_corners"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:text="No Cost EMI | Exchange Offers"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center_horizontal|center_vertical"

            >

            <ImageView
                android:id="@+id/middle_offers_product_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/Middle_offers_product_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Best Gaming Laptops"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/middel_offers_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aces, HP,Asus and more"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="Upto 70% Off"
                android:textColor="#1B751F"
                android:textSize="20sp"
                android:id="@+id/middle_offers_price"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>